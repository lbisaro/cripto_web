<div class="container-fluid" id="variacion_del_precio">
    <div class="d-flex justify-content-between">
        <div >
            <h3>Variacion del precio</h3>
        </div>
        <div id="last_update" class="text-success"></div>  
    </div>
            
    <table class="table table-sm table-striped" id="tbl_precios">
        <thead>
            <tr class="strong">
                <td>ID</td>
                <td class="text-end">Ultimos 15m</td>
                <td class="text-end">% 1m</td>
                <td class="text-end">% 3m</td>
                <td class="text-end">% 5m</td>
                <td class="text-end">% 15m</td>
                <td class="text-end">% 1h</td>
            </tr>
        </thead>
        <tbody>
            {{#each tickers}}
                {{#if name}}
                    <tr>
                        <td><a href="https://www.binance.com/es/trade/{{name}}_USDT?type=spot" target="_blank">{{name}}</a> <span class="fst-italic" style="font-size:x-small">(USD {{price}})</span></td>
                        <td class="text-end">{{sumLast15m}}</td>
                        <td class="text-end">{{perc_1m}}</td>
                        <td class="text-end">{{perc_3m}}</td>
                        <td class="text-end">{{perc_5m}}</td>
                        <td class="text-end">{{perc_15m}}</td>
                        <td class="text-end">{{perc_1h}}</td>
                    </tr>
                {{/if}}
            {{else}}
                <td class="text-warning" colspan="23">
                    No se encontraron registros
                </td>
            {{/each}}
            
        </tbody >
    </table>
</div>
<script>
    $(document).ready(function() {
        $('#tbl_precios').tablesorter({ sortList: [[1,1]] });
    });

    //web sockets
    const socket = io();
    socket.on('lastupdate', function (data) {
       $('#last_update').html(data.time); 
    });

    socket.on('updatePrices', function (data) {
        var tbody = $('#tbl_precios tbody');
        tbody.html('');
        $('#last_update').html(`Actualizado: <strong>${data.lastUpdate}</strong>`);
        if (data.tickers.length>0) {
            for (var i=0; i<data.tickers.length;i++){
                tbody.append(`
                    <tr>
                        <td><a href="https://www.binance.com/es/trade/${data.tickers[i].name}_USDT?type=spot" target="_blank">
                            ${data.tickers[i].name}</a> 
                            <span class="fst-italic" style="font-size:x-small">
                                (USD ${data.tickers[i].price})
                            </span>
                        </td> ${(data.tickers[i].perc_1m<0?'text-danger':'text-success')}
                        <td class="text-end ${(data.tickers[i].sumLast15m>0?'text-success':'text-danget')}">
                            ${data.tickers[i].sumLast15m}</td>
                        <td class="text-end ${(data.tickers[i].perc_1m>0?'text-success':'text-danget')}">
                            ${data.tickers[i].perc_1m}</td>
                        <td class="text-end ${(data.tickers[i].perc_3m>0?'text-success':'text-danget')}">
                            ${data.tickers[i].perc_3m}</td>
                        <td class="text-end ${(data.tickers[i].perc_5m>0?'text-success':'text-danget')}">
                            ${data.tickers[i].perc_5m}</td>
                        <td class="text-end ${(data.tickers[i].perc_15m>0?'text-success':'text-danget')}">
                            ${data.tickers[i].perc_15m}</td>
                        <td class="text-end ${(data.tickers[i].perc_1h>0?'text-success':'text-danget')}">
                            ${data.tickers[i].perc_1h}</td>
                    </tr>`);
            }
        }
        else
        {
            $('#tbl_precios tbody').html('<tr><td colspan="7"><div class="alert alert-warning" role="alert">No hay registros disponibles.</div></td></tr>');
        }
        $("#tbl_precios").trigger("update");
    });
</script>