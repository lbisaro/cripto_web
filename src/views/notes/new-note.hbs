<div class=".col-md4 mx-auto">

    <div class="card">
        <div class="card-header">
            Nueva nota
        </div>
        <div class="card-body">
            <form action="/notes/new-note" method="POST">
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Titulo" autofocus value="{{title}}">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion">{{description}}</textarea>
                </div>
                <div class="form-group">
                    <button class="btn btn-primary btn-block" type="submit">Guardar</button>
                </div>
            </form>
        </div>
    </div>
</div>
