<h1>Hello {{userName}}</h1>
<div class="row"></div>
    {{#each notes}}
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title d-flex justify-content-between align-items-center">
                    {{title}} <a href="/notes/edit/{{_id}}"><i class="fas fa-edit"></i></a>
                </h4>
                <p>
                    {{description}}
                    <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
                        <input type="hidden" value="DELETE" name="_method">
                        <button class="btn btn-danger btn-block" type="submit">Eliminar</button>
                    </form>
                </p>
            </div>
        </div>
    </div>
    {{else}}
        <div class="card mx-auto">
            <div class="card-body">
                <p class="lead">No hay notas registradas</p>
                <a href="/notes/add" class="btn btn-success btn-block">Crear una nueva</a>
            </div>
        </div>
    {{/each}}
</div>