<div class="col-md4 mx-auto">
    <div class="card">
        <div class="card-header">
            <h3>Editar nota</h3>
        </div>
        <div class="card-body">
            <form action="/notes/edit-note/{{note._id}}?_method=PUT" method="POST">
                <input type="hidden" name="_method" value="PUT">
                <div class="form-group">
                    <input type="text" name="title" value="{{note.title}}" class="form-control" placeholder="Titulo">
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Descripcion">{{note.description}}</textarea>
                </div>
                <div class="form-control">
                    <button class="btn btn-primary btn-block" type="submit">
                        Grabar
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>